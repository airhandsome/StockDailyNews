page {
  background: #f5f5f5;
  height: 100%;
}

.container {
  padding: 20rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 分类选择器样式 */
.category-picker {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.picker-content {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-label {
  font-size: 28rpx;
  color: #666;
}

.picker-value {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

/* 笔记内容区域 */
.note-content {
  width: 90%;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 500rpx;
}

.note-textarea {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  line-height: 1.6;
  padding-bottom: 40rpx;
}

.word-count {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: calc(30rpx + env(safe-area-inset-bottom));
  background: #ddd;
  color: #fff;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.submit-btn.active {
  background: #07c160;
}
