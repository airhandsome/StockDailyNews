/* pages/analyst/analyst.wxss */
.analyst-scroll {
  height: calc(100vh - 88rpx);
  background: #f5f5f5;
}

.analyst-container {
  padding: 30rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

.analyst-header {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.avatar-container {
  position: relative;
  margin-right: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.certification {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #07c160;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
}

.certification .verified {
  margin-right: 4rpx;
}

.basic-info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.institution {
  font-size: 26rpx;
  color: #999;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #07c160;
  padding-left: 20rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  background: #f0f9f0;
  color: #07c160;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.achievement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
}

.achievement-year {
  background: #07c160;
  color: #fff;
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.achievement-content {
  font-size: 28rpx;
  color: #333;
}

.report-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-item {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.report-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.report-date {
  font-size: 24rpx;
  color: #999;
}

.contact-section {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}